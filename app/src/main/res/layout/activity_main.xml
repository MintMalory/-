<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:orientation="vertical"
    tools:context="ua.mintmalory.metronome.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/manual_mode_title"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:gravity="center"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/vibro_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="@dimen/btn_padding"
            android:drawableTop="@drawable/vibro_btn_icon"
            android:gravity="center"
            android:padding="@dimen/btn_padding"
            android:textAllCaps="true"
            android:textColor="@drawable/text_color"
            android:textOff="@string/vibro_btn_text"
            android:textOn="@string/vibro_btn_text"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/flash_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="@dimen/btn_padding"
            android:drawableTop="@drawable/flash_btn_icon"
            android:gravity="center"
            android:padding="@dimen/btn_padding"
            android:textAllCaps="true"
            android:textColor="@drawable/text_color"
            android:textOff="@string/flash_btn_text"
            android:textOn="@string/flash_btn_text"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/sound_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="@dimen/btn_padding"
            android:drawableTop="@drawable/mute_btn_icon"
            android:gravity="center"
            android:padding="@dimen/btn_padding"
            android:textAllCaps="true"
            android:textColor="@drawable/text_color"
            android:textOff="@string/sound_btn_text"
            android:textOn="@string/sound_btn_text"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/set_bpm_text"
        android:textAllCaps="true"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/bpm_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:paddingRight="5dp"
            android:text="100"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="bpm"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="90"
            android:max="200"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:progress="100"
            android:progressDrawable="@drawable/seekbar"
            android:thumb="@drawable/arrows" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/indicator_text"
        android:textAllCaps="true"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/indicator_imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/indicator_off"
        android:layout_marginBottom="25dp"/>

    <ToggleButton
        android:id="@+id/start_stop_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/start_btn"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textOff="Start"
        android:textOn="Stop" />


</LinearLayout>
